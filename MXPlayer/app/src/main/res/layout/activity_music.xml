<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Music">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MX Player Music"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="130dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/text1"/>

    <ImageView
        android:id="@+id/mxlogo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/mx_logo" />

    <TextView
        android:id="@+id/music1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mxlogo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:text="Music 1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mxlogo"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/music1"
        android:backgroundTint="@color/black"
        android:text="Play" />


    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mxlogo"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/play"
        android:backgroundTint="@color/black"
        android:text="Pause" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:text="Music 2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/music2"/>

    <Button
        android:id="@+id/play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/music2"
        android:backgroundTint="@color/black"
        android:text="Play" />

    <Button
        android:id="@+id/pause1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pause"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@+id/play1"
        android:backgroundTint="@color/black"
        android:text="Pause" />

</RelativeLayout>