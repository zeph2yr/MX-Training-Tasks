<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gallery">

    <TextView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:text="MX Gallery"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:id="@+id/gurgaon"
        android:background="@drawable/gurgaon"
        android:layout_marginTop="40dp"
        android:layout_below="@id/gallery"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_below="@id/gallery"
        android:layout_toRightOf="@id/gurgaon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bengaluru"
        android:id="@+id/bengaluru"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="Gurgaon"
        android:id="@+id/gurgaontxt"
        android:layout_below="@+id/gurgaon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@id/bengaluru"
        android:layout_toRightOf="@id/gurgaontxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"
        android:text="Bengaluru"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/bengalurutxt"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_below="@+id/gurgaontxt"
        android:background="@drawable/dehradun"
        android:layout_marginTop="20dp"
        android:id="@+id/dehradun"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_below="@+id/bengalurutxt"
        android:layout_toRightOf="@+id/dehradun"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mumbai"
        android:id="@+id/mumbai"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:id="@+id/dehraduntxt"
        android:layout_below="@id/dehradun"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Dehradun"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:id="@+id/mumbaitxt"
        android:layout_below="@+id/mumbai"
        android:layout_toRightOf="@id/dehraduntxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:text="Mumbai"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>




</RelativeLayout>